<div class="container-fluid">
    
        <div class="jumbotron">
            <div class="row">
                <div class="col-sm-5">
                    <h1>Get Ya Bugers Here </h1>
                    <p>Order for Pickup</p>
                    <br>
                    <h2> Order Your Choice Of Burger! </h2><br>
                
                    <form class="create-form">

                        <div class="input-group">
                            
                            <input class="form-control" type="input" placeholder="My Burger" id="nb" >
                            <span class="input-group-addon"><button type="submit" class="btn  btn-outline-dark">ORDER HERE!! </button></span>
                        </div>


                    </form> 
                </div> <br>  
                <div class="col-sm-2">
                    

                </div> 
                <div class="col-sm-5" id="imgid">
                    <img src="/assets/img/Burger.jpg" alt="burger img">
                </div> 
            </div> 
        </div>        

        
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="eat"><strong>Order Burger</strong>
                    <p> Press the button to order the burger </p>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="btn btn-outline-success eatB" id="eatbtn" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Eat</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="done"><strong>Ready for Pick Up </strong>
                    <p>Order will be removed when you are done eating</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class=" btn btn-outline-danger trash" id="dbtn" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">All Done</button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
</div>    
   

